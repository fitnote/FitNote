/* pages/power/power.wxss */

.container-full-screen {
  position: absolute;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 0px;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
}

.title {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  padding-top: 48rpx;
  padding-bottom: 16rpx;
  font-size: 40pt;
  line-height: 40pt;
  padding-left: 5vw;
  z-index: 999;
}

.title::before {
  content: '';
  position: absolute;
  top: -32rpx;
  right: 0;
  bottom: 0;
  left: 0;
  height: calc(40pt + 48rpx + 16rpx + 32rpx);
  width: 100vw;
  filter: blur(16rpx);
  background: hsla(0, 0%, 100%, 1);
  z-index: -1;
}

.scroll-container {
  flex: 1;
  display: flex;
}

.fit-item-list {
  padding-top: calc(40pt + 48rpx + 16rpx);
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: flex-start;
  align-content: flex-start;
  /* padding-top: 48rpx + 40pt + 16rpx; */
}

.fit-item {
  margin-left: 5vw;
  margin-top: 5vw;
  width: 42.5vw;
  height: 42.5vw;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-content: center;
  align-items: center;
  box-sizing: border-box;
  border-radius: 5vw;
  box-shadow: 0rpx 0rpx 24rpx 0px rgba(0, 0, 0, 0.1);
}

.fit-item:last-child {
  margin-bottom: 5vw;
}

.fit-item-icon {
  width: 25vw;
  height: 25vw;
  background-color: rgba(87, 107, 149, 0.1);
  border-radius: 50%;
  box-sizing: border-box;
  padding: 18rpx;
}

.fit-item-text {
  font-size: 18pt;
  line-height: 18pt;
  text-align: center;
}


.confirm_bar {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100vw;
  height: 25vw;
  /* background-color: red; */
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  align-content: center;
}

.cancel {
  /* padding-right: 5vw; */
  height: 15vw;
  width: 35vw;
  background-color: #fff;
