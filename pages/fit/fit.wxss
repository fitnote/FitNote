/* pages/fit/fit.wxss */

.container-full-screen {
  position: absolute;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 0px;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
}

.title {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  padding-top: 48rpx;
  padding-bottom: 16rpx;
  font-size: 40pt;
  line-height: 40pt;
  padding-left: 5vw;
  z-index: 999;
}

.title::before {
  content: '';
  position: absolute;
  top: -32rpx;
  right: 0;
  bottom: 0;
  left: 0;
  height: calc(40pt + 48rpx + 16rpx + 32rpx);
  width: 100vw;
  filter: blur(16rpx);
  background: hsla(0, 0%, 100%, 1);
  z-index: -1;
}

.scroll-container {
  flex: 1;
  display: flex;
}

.fit-item-list {
  padding-top: calc(40pt + 48rpx + 16rpx);
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  /* flex-wrap: wrap; */
  align-items: center;
  align-content: center;
}

.fit-item {
  /* margin-left: 5vw; */
  margin-top: 5vw;
  width: 90vw;
  /* height: 30vw; */
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-content: center;
  align-items: center;
  box-sizing: border-box;
  border-radius: 24rpx;
  box-shadow: 0rpx 0rpx 24rpx 0px rgba(0, 0, 0, 0.1);
  padding: 5vw;
}

.fit-item:last-child {
  margin-bottom: 30vw;
}

.fit-item-icon {
  width: 25vw;
  height: 25vw;
  background-color: rgba(87, 107, 149, 0.1);
  border-radius: 50%;
  box-sizing: border-box;
  padding: 18rpx;
  margin-right: 5vw;
}

.fit-item-text {
  font-size: 20pt;
  line-height: 20pt;
  /* text-align: center; */
}

.confirm_bar {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100vw;
  height: 25vw;
  /* background-color: red; */
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  align-content: center;
}

.yes {
  padding-left: 5vw;
  height: 15vw;
  width: 35vw;
  background-color: #f5222d;
  display: flex;
  justify-content: center;
  align-content: center;
  align-items: center;
  border-top-left-radius: 15vw;
  border-bottom-left-radius: 15vw;
  box-sizing: border-box;
  box-shadow: 0rpx 0rpx 36rpx 0px rgba(245, 34, 45, 0.5);
  color: white;
  /* opacity: 0.95; */
}

.no {
  padding-right: 5vw;
  height: 15vw;
  width: 35vw;
  background-color: #fff;
  border-top: 1rpx solid rgba(245, 34, 45, 0.85);
  border-bottom: 1rpx solid rgba(245, 34, 45, 0.85);
  border-right: 1rpx solid rgba(245, 34, 45, 0.85);
  display: flex;
  justify-content: center;
  align-content: center;
  align-items: center;
  border-top-right-radius: 15vw;
  border-bottom-right-radius: 15vw;
  box-sizing: border-box;
  /* box-shadow: 0rpx 0rpx 36rpx 0px rgba(0, 0, 0, 0.25); *//* opacity: 0.85; */
}
