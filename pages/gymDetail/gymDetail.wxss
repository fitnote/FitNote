/**index.wxss**/
.mainContainer {
  width: 100%;
  background-color: #ebebeb;
}

.carouselFigure {
  width: 100%;
  height: 730rpx;
}
.carouselFigure image {
  width: 100%;
  height: 100%;
}
.wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: 2rpx;
}
.carouselFigure .wx-swiper-dot{
    width:14rpx;
    display: inline-flex; 
    height: 14rpx;  
    justify-content:space-between; 
}
 .carouselFigure .wx-swiper-dot::before{
     content: '';
    flex-grow: 1;  
    background: #ccc;
    border-radius: 14rpx;
 }
 .carouselFigure .wx-swiper-dot-active::before{
    background:#eab519;   
}
.titleContainer {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff; 
  font-size: 30rpx;
  border-bottom: 1rpx #f0f0f0 solid;
}
.titleContainer .titleText {
  margin-bottom: 20rpx;
  color: #eab519;
  float: left;
  margin-left: 36rpx; 
}
.titleContainer .more{
  color: #999;
  font-size: 28rpx;
  position:absolute;
  right: 36rpx;
  line-height: 88rpx;
  margin-top: 3rpx;
}
.titleContainer .ourLocation{
  color: #999;
  font-size: 28rpx;
  float: right;
  margin-right: 10%;
  line-height: 88rpx;
}
.aboutUsContent {
  width: 100%;
  height: 200rpx;
  padding-bottom: 50rpx;
  background-color: #fff;
  margin-bottom: 8rpx;
  padding-left: 30rpx;
  text-align: left;
  font-size: 28rpx;
  padding-top: 20rpx;
}
.aboutUsContent .storeDescribe{
  width: 700rpx;
  color: #999;
  overflow: hidden
}

.ourEnvContent {
  width: 100%;
  background-color: white;
  padding-top: 20rpx;
  margin-bottom: 20rpx;
}

.ourEnvContentCell {
  width: 100%;
  height: 422rpx;
  margin-top: 4rpx;
  position: relative;
  text-align: center;
  font-size: 60rpx;
  color: white;
}

.ourEnvContentCellTextMaskLeft {
  width: 20%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  left: 0;
  top: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.ourEnvContentCellTextMaskRight {
  width: 20%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.ourEnvContentCell Text{
  display: block;
  width: 60rpx;
}

.ourEnvContentCell image {
  width: 100%;
  height: 100%;
}