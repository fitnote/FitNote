/* pages/history/history.wxss */

.container-full-screen {
  position: absolute;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 0px;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
}

.title {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  padding-top: 48rpx;
  padding-bottom: 16rpx;
  font-size: 40pt;
  line-height: 40pt;
  padding-left: 5vw;
  z-index: 999;
}

.title::before {
  content: '';
  position: absolute;
  top: -32rpx;
  right: 0;
  bottom: 0;
  left: 0;
  height: calc(40pt + 48rpx + 16rpx + 32rpx);
  width: 100vw;
  filter: blur(16rpx);
  background: hsla(0, 0%, 100%, 1);
  z-index: -1;
}

.scroll-container {
  flex: 1;
  display: flex;
}

.history-list {
  padding-top: calc(40pt + 48rpx + 16rpx);
  padding-bottom: 25vw;
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
  align-items: center;
}

.history-item {
  margin-top: 5vw;
  width: 90vw;
  box-sizing: border-box;
  border-radius: 24rpx;
  box-shadow: 0rpx 0rpx 24rpx 0px rgba(0, 0, 0, 0.1);
  padding-left: 5vw;
  padding-right: 5vw;
  padding-top: 2vw;
  padding-bottom: 3vw;
}

.history-item .main {
}

.sub-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-content: center;
  align-items: flex-start;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  padding-top: 3vw;
  padding-bottom: 3vw;
}

/* .sub-item:last-child {
