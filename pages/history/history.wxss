.sub-item-name {
  font-size: 20pt;
  letter-spacing: 4rpx;
}

.sub-item-detail {
  width: 45vw;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: flex-start;
  align-content: flex-start;
  justify-content: flex-end;
}

.sub-item-detail-item {
  font-size: 10pt;
  background-color: #f5f5f5;
  margin-bottom: 8rpx;
  margin-right: 16rpx;
  padding-top: 8rpx;
  padding-bottom: 8rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
  border-radius: 16rpx;
  width: 50px;
  display: flex;
  justify-content: center;
  align-content: center;
  align-items: center;
}

.history-item .time {
  padding-top: 3vw;
  font-size: 12pt;
}


.confirm_bar {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
