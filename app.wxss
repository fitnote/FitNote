/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.navigate_test_go {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 20vw;
  height: 20vw;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-content: center;
  align-items: center;
  background-color: rgba(255, 120, 0, 1);
  margin: 5vw;
  color: white;
  box-shadow: 0rpx 0rpx 36rpx 0px rgba(255, 120, 0, 0.5);
  font-size: 14pt;
  font-style: oblique;
}

.navigate_test_back {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 20vw;
  height: 20vw;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-content: center;
  align-items: center;
  background-color: red;
  margin: 5vw;
  color: white;
}

.navigate_bar {
  position: fixed;
  bottom: 24px;
  left: 0;
  right: 0;
  margin: auto;
  width: 78vw;
  height: 12vw;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  align-content: center;
  border-radius: 12vw;
  padding-left: 3vw;
  padding-right: 3vw;
  /* background: linear-gradient(to right, #fa541c calc(50% - 100px), #fa8c16 calc(50% + 100px)); */
  background: white;
  color: #8c8c8c;
  box-shadow: 0px 7px 16px 0px rgba(255, 120, 0, 0.15);
  font-size: 16px;
}

.navigate_bar view {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  align-content: center;
  border-right: 1px solid rgba(0, 0, 0, 0.25);
}

.navigate_bar view image {
  width: 20px;
  height: 20px;
  margin-right: 6px;
}

.navigate_bar view:last-child {
  border: 0;
}

.navigate_bar .current text {
  background: linear-gradient(to right, #fa541c, #fa8c16);
  -webkit-background-clip: text;
  color: transparent;
}
